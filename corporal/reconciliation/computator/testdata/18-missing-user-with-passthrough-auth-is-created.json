{
	"currentState": {
		"users": [
		]
	},

	"policy": {
		"schemaVersion": 1,

		"flags": {
			"allowCustomUserDisplayNames": true,
			"allowCustomUserAvatars": true
		},

		"managedRoomIds": [
			"!a:host"
		],

		"users": [
			{
				"id": "@a:host",
				"authType": "passthrough",
				"authCredential": "some-initial-password",
				"active": true,
				"joinedRooms": [
					{
						"roomId": "!a:host",
						"powerLevel": 0
					}
				]
			}
		]
	},

	"reconciliationState": {
		"actions": [
			{
				"type": "user.create",
				"payload": {
					"userId": "@a:host",
					"password": "some-initial-password"
				}
			},

			{
				"type": "room.join",
				"payload": {
					"userId": "@a:host",
					"roomId": "!a:host"
				}
			},

			{
				"type": "room.users_set_power_levels",
				"payload": {
					"roomId": "!a:host",
					"roomPowerForUserId": "map[@a:host:0]"
				}
			}
		]
	}
}
